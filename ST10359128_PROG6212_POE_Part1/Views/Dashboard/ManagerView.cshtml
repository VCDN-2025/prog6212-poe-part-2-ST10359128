@model List<ST10359128_PROG6212_POE_Part1.Models.Claim>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Manager View";
}
<h2 class="text-primary fw-bold mb-3">Manager View</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-bordered table-striped align-middle">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Lecturer</th>
                    <th>Hours</th>
                    <th>Rate</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>File</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.Id</td>
                        <td>@c.LecturerName</td>
                        <td>@c.HoursWorked</td>
                        <td>R @c.HourlyRate</td>
                        <td>R @c.Amount</td>
                        <td>
                            <span class="badge @(c.Status=="Approved"?"bg-success":c.Status=="Rejected"?"bg-danger":"bg-warning text-dark")">@c.Status</span>
                        </td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(c.FileName))
                            {
                                <a href="~/Uploads/@c.FileName" target="_blank" class="btn btn-outline-primary btn-sm">View</a>
                            }
                            else
                            {
                                <span class="text-muted">None</span>
                            }
                        </td>
                        <td>
                            <form method="post" action="/Dashboard/UpdateStatus" class="d-flex gap-2">
                                <input type="hidden" name="id" value="@c.Id" />
                                <button name="actionType" value="Approve" class="btn btn-success btn-sm">Approve</button>
                                <button name="actionType" value="Reject" class="btn btn-danger btn-sm">Reject</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
